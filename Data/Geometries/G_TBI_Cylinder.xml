<?xml version="1.0" encoding="utf-8"?>

<accelerator>
  
  <!--Air gap before filter-->
  <module type="slab" name="air" medium="AIR700ICRU" density="1">
    <Color r="0" g="0.0" b="1.0" t="0.1" />
    <position unit="cm" x="0" y="0" z="0" />
    <normal x="0" y="0" z="1" />
    <xaxis x="1" y="0" z="0" />
    <size unit="cm" height="500.0"/>
  </module>
  
  <!--Plex filter-->
  <module type="slab" name="air" medium="PMMA700ICRU" density="1">
    <Color r="1" g="1.0" b="1.0" t="0.4" />
    <position unit="cm" x="0" y="0" z="500" />
    <normal x="0" y="0" z="1" />
    <xaxis x="1" y="0" z="0" />
    <size unit="cm" height="1.5"/>
  </module>

  <!--Air gap before phantom-->
  <module type="slab" name="air" medium="AIR700ICRU" density="1">
    <Color r="0" g="0.0" b="1.0" t="0.1" />
    <position unit="cm" x="0" y="0" z="501.5" />
    <normal x="0" y="0" z="1" />
    <xaxis x="1" y="0" z="0" />
    <size unit="cm" height="33.5"/>
  </module>
    
  <!--Phantom-->
  <module type="cylinder" name="Phantom" medium="H2O700ICRU" density="1">
    <Color r="1" g="1" b="1" t="0.8" />
    <position unit="cm" x="-100" y="0" z="550" />
    <normal x="1" y="0" z="0" />
    <xaxis x="0" y="1" z="0" />
    <size unit="cm" radius="15.0" height="200"/>
  </module>

</accelerator>
