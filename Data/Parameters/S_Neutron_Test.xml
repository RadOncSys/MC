<?xml version="1.0" encoding="utf-8"?>

<!--
Simulation parameters for testing neutron transport at development time 
S_Neutron_Test.xml G_Neutron_Test.xml - simulation arguments example
-->

<input>
	<simulation nhistories="100000" nbanches="10"/>

	<options>
		<vrmlfile>Newtron.wrl</vrmlfile>
		<statfile>statistic.dat</statfile>
		<transCutoff_elec unit="MeV" ecat ="0.2"/>
	</options>

	<!--First object that neutron hit is rectangular collimator-->
	<source name="Circular conical neutron beam" module="Collimator" trackparticles="false">
		<radiation type="neutron" energy="150" ewidth="50.0" spectrum="gauss" />
		<shape direction="conical_sigmar" size="0.20" angle="0.2"/>
		<position unit="cm" x="0" y="0" z="-100.0" />
		<direction x="0" y="0" z="1" />
	</source>

	<!--2D matrix of dose distribution in plane XZ-->
	<score type="2D" module="Phantom">
		<size unit="cm" nx="250" nz="175"
			  x1="-25.0" x2="25.0"
			  y1="-1.0" y2="1.0"
			  z1="0.0" z2="35.0" />
	</score>
</input>
