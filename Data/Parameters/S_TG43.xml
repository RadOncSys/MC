<?xml version="1.0" encoding="utf-8"?>

<!--
В качестве материала выбираем золото как ближайший к иридию материал из имеющихся в PEGS4
-->

<input>
  <simulation nhistories="10000000" nbanches="100">
  </simulation>

  <options>
    <vrmlfile>brachy.wrl</vrmlfile>
    <statfile>brachy.dat</statfile>
    <transCutoff_elec unit="MeV" ecat ="0.2"/>
  </options>

  <!-- 
  Источник
  -->
  <source name="brachy_source" module="Source" trackparticles="false">
    <radiation type="brachy" isotope="IR192" />
    <position unit="cm" x="0" y="0" z="-0.18" />
    <direction x="0" y="0" z="1" />
    <core radius="0.03" h="0.36"/>
  </source>

  <!-- 
  Скоринг
  -->
  <score type="rz" module="Phantom">
    <size unit="cm" nr="101" nz="101" rmax="10.1" zmin="-0.05" zmax="10.05"/>
  </score>

</input>
